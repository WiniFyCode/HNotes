{
  "manifest_version": 3,
  "name": "TECHVANGUARD",
  "version": "1.0.5",
  "description": "Highlight, annotate, and use AI to enhance your web reading experience",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/shared.js", "js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "html/sidebar.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TECHVANGUARD"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["html/sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
